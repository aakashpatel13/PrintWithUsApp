<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"
    android:background="@drawable/sitebg">

    <LinearLayout
        android:id="@+id/aboutUs_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Welcome to our online store"
            android:textColor="@color/white_greyish"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="We have a great passion for printing and we strive to do our best by providing unique ideas, substrates and top-of-the-line specialty processes. Since 1986, our creative and inventive team has been committed to service excellence, making it our mission to surpass your expectations."
            android:textColor="@color/white_greyish"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Our Objective"
            android:textColor="@color/white_greyish"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Our goal is to make it easy and simple for you to create stunning business stationery and promotional pieces that will effectively present your image and help you communicate proficiently. We have designed a customizable online template with many sample designs to aid you in this process or, you can upload your own file."
            android:textColor="@color/white_greyish"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Why Choose PrintWithUS?"
            android:textColor="@color/white_greyish"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Combining the expertise of its team members with contemporary and vintage printing techniques, Captain has the skill,the equipment and the experience to bring your project to life.We provide you with all the necessary resources to get started."
            android:textColor="@color/white_greyish"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp">


        <ImageView
            android:id="@+id/homeimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/home"
            android:padding="3dp"
            android:textColor="#009688"
            android:textStyle="bold"
            android:tooltipText="Home" />
        <ImageView
            android:id="@+id/ListProduct"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="3dp"
            android:tooltipText="List Of Products"
            android:background="@drawable/listproduct"
            android:padding="3dp"
            android:textColor="#009688"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/contactimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/contact"
            android:padding="3dp"
            android:textColor="#009688"
            android:textStyle="bold"
            android:tooltipText="Contact US" />

        <ImageView
            android:id="@+id/aboutusimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/aboutus"
            android:padding="3dp"
            android:textColor="#009688"
            android:textStyle="bold"
            android:tooltipText="About US" />
    </LinearLayout>
</RelativeLayout>