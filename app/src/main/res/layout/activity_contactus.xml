<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:padding="20dp"
    android:background="@drawable/sitebg">

<LinearLayout
    android:id="@+id/ContactUs_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Contact US"
        android:textColor="@color/white_greyish"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/FirstName"
        android:singleLine="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/white_greyish" />

    <EditText
        android:id="@+id/LastName"
        android:singleLine="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/white_greyish" />

    <EditText
        android:id="@+id/Email"
        android:singleLine="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/white_greyish" />

    <EditText
        android:id="@+id/Query"
        android:singleLine="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/qry"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Query"
        android:inputType="textImeMultiLine"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/white_greyish" />


    <Button
        android:id="@+id/submitBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@drawable/loginbutton_selector"
        android:padding="3dp"
        android:text="Submit"
        android:textColor="#009688"
        android:textSize="17sp"
        android:textStyle="bold" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/white_greyish" />
    <Button
        android:id="@+id/resetBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@drawable/loginbutton_selector"
        android:padding="3dp"
        android:text="Reset"
        android:textColor="#009688"
        android:textSize="17sp"
        android:textStyle="bold" />
</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp">


        <ImageView
            android:id="@+id/homeimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/home"
            android:padding="3dp"
            android:textColor="#009688"
            android:textStyle="bold"
            android:tooltipText="Home" />
        <ImageView
            android:id="@+id/ListProduct"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="3dp"
            android:tooltipText="List Of Products"
            android:background="@drawable/listproduct"
            android:padding="3dp"
            android:textColor="#009688"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/contactimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/contact"
            android:padding="3dp"
            android:textColor="#009688"
            android:textStyle="bold"
            android:tooltipText="Contact US" />

        <ImageView
            android:id="@+id/aboutusimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/aboutus"
            android:padding="3dp"
            android:textColor="#009688"
            android:textStyle="bold"
            android:tooltipText="About US" />
    </LinearLayout>
</RelativeLayout>